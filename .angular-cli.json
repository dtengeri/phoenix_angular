{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "phoenix-angular"
  },
  "apps": [
    {
      "root": "lib/phoenix_angular_web/web/static/src",
      "outDir": "priv/static/js",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css"
      ],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "lib/phoenix_angular_web/web/static/protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "lib/phoenix_angular_web/web/static/src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "lib/phoenix_angular_web/web/static/src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "lib/phoenix_angular_web/web/static/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "lib/phoenix_angular_web/web/static/karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "class": {
      "spec": false
    },
    "component": {}
  }
}
